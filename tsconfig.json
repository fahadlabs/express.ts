{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es2017",
    "outDir": "dist",
    "rootDir": "./src"
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "src/tests"]
}
